def compare(player_card, pile_card):
    print("compare", player_card[0])
    print("compare", pile_card[0])
    #print(player_card.index(3))
    #Index 0 is number/special and index 1 is color
    print(player_card)
    if (player_card[0] == pile_card[0]):
        print(player_card[0])
        print(pile_card[0])
        return True
    elif (player_card[1] == pile_card[1]):
        return True
    elif (player_card[0] in range(10, 13)):#Run Check Special
        return True
    else:
        return False
