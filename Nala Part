#player hand is list of tuples
def check_hand(player_hand, pile_card):
    for card in player_hand:
        print(card)
        match = compare(card, pile_card)
        if(match == True):
            print('Match')
        else:
            print('No Match')

def main():

    hand = [(1, 'red'), (2, 'red'), (3, 'blue')]
    hand1 = [(3, 'blue')]
    check_hand(hand1, (1, 'red'))
    return
